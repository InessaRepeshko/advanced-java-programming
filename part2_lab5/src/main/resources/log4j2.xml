<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <!-- For part2_lab5/task1 package -->
        <File name="Task1FileAppender" fileName="src/main/resources/part2_lab5/task1/MetroStationsApp-${date:yyyy-MM-dd}.log" immediateFlush="true" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %logger{36} - %msg%n"/>
        </File>

        <!-- For part2_lab5/task3 package -->
        <File name="Task3FileAppender" fileName="src/main/resources/part2_lab5/task3/MetroStationsApp-${date:yyyy-MM-dd}.log" immediateFlush="true" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %logger{36} - %msg%n"/>
        </File>

        <!-- For root-->
        <File name="FileAppender" fileName="src/main/resources/part2_lab5/LogFile-${date:yyyy-MM-dd}.log" immediateFlush="false" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %logger{36} - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <!-- Logger for part2_lab5/task1 package -->
        <Logger name="part2_lab5.task1" level="info" additivity="false">
            <AppenderRef ref="Task1FileAppender"/>
        </Logger>

        <!-- Logger for part2_lab5/task3 package -->
        <Logger name="part2_lab5.task3" level="info" additivity="false">
            <AppenderRef ref="Task3FileAppender"/>
        </Logger>

        <Root level="error">
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>