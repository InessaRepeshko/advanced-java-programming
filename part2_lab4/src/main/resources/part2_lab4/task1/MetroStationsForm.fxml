         </children>
      </AnchorPane>
   </left>
   <center>
      <TableView fx:id="tableViewHours" editable="true" prefHeight="468.0" prefWidth="565.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="tableColumnRidership" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" text="Ridership" />
            <TableColumn fx:id="tableColumnComment" maxWidth="335.0" minWidth="335.0" prefWidth="335.0" text="Comment" />
        </columns>
          <columnResizePolicy>
              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
          </columnResizePolicy>
      </TableView>
   </center>
</BorderPane>
